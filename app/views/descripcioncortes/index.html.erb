<h1>Listing descripcioncortes</h1>

<table>
  <thead>
    <tr>
      <th>Tallacantidad</th>
      <th>Capas</th>
      <th>Color</th>
      <th>Tallaxs</th>
      <th>Tallas</th>
      <th>Tallam</th>
      <th>Tallal</th>
      <th>Tallaxl</th>
      <th>Ordenproduccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% re = 0%>
  <tbody>
    <% @descripcioncortes.each do |descripcioncorte| %>
      <tr>
        <td><%= descripcioncorte.tallacantidad %></td>
        <td><%= descripcioncorte.capas %></td>
        <td><%= descripcioncorte.color %></td>
        <td><%= descripcioncorte.tallaxs %></td>
        <td><%= descripcioncorte.tallas %></td>
        <td><%= descripcioncorte.tallam %></td>
        <td><%= descripcioncorte.tallal %></td>
        <td><%= descripcioncorte.tallaxl %></td>
        <td><%= descripcioncorte.ordenproduccion.ordennumero %></td>
        <td><%= link_to 'Show', ordenproduccion_descripcioncorte_path(@ordenproduccion,descripcioncorte) %></td>
        <td><%= link_to 'Edit', edit_ordenproduccion_descripcioncorte_path(@ordenproduccion,descripcioncorte) %></td>
        <td><%= link_to 'Destroy', ordenproduccion_descripcioncorte_path(@ordenproduccion,descripcioncorte), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <strong><%
        re = re + sumar(descripcioncorte.tallaxs,descripcioncorte.tallas,descripcioncorte.tallam,descripcioncorte.tallal,descripcioncorte.tallaxl) 
        %>
              </strong>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= re %>
<%= link_to 'new', new_ordenproduccion_descripcioncorte_path(@ordenproduccion),
        	:class => 'btn btn-primary' %>
        	
<%= link_to 'Back', ordenproduccion_path(@ordenproduccion) %>
