<h1 class="center">Descripcion del Corte</h1>
<br><br>
<div class="table-reponsive">
  
<table class="table table-hover">
  <thead>
    <tr class="active">
      <th>Tallacantidad</th>
      <th>Capas</th>
      <th>Color</th>
      <th>Tallaxs</th>
      <th>Tallas</th>
      <th>Tallam</th>
      <th>Tallal</th>
      <th>Tallaxl</th>
      <th>Veces trazo</th>
      <th>Total Capas</th>
      <th>Ordennumero</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% re = 0%>
  <tbody>
    <% @descripcioncortes.each do |descripcioncorte| %>
      <tr>
        <td><%= descripcioncorte.tallacantidad %></td>
        <td><%= descripcioncorte.ordenproduccion.capas %></td>
        <td><%= descripcioncorte.color.colornombre %></td>
        <td><%= descripcioncorte.tallaxs %></td>
        <td><%= descripcioncorte.tallas %></td>
        <td><%= descripcioncorte.tallam %></td>
        <td><%= descripcioncorte.tallal %></td>
        <td><%= descripcioncorte.tallaxl %></td>
        <td><%= descripcioncorte.ordenproduccion.vecestrazo %></td>
        <td><%= descripcioncorte.tallasuma %></td>
        <td>000<%= descripcioncorte.ordenproduccion.id %></td>
        
        <td><%= link_to "<i class='fa fa-check-circle-o fa-2x'></i>".html_safe, descripcioncorte_cuadroproduccions_path(descripcioncorte) %></td>
                <td><%= link_to "<i class='fa fa-eye fa-2x encima'></i>".html_safe, ordenproduccion_descripcioncorte_path(@ordenproduccion, descripcioncorte) %>

        <td><%= link_to "<i class='fa fa-pencil fa-2x encima'>".html_safe, edit_ordenproduccion_descripcioncorte_path(@ordenproduccion,descripcioncorte) %></td>
        <td><%= link_to "<i class='fa fa-eraser fa-2x encima'>".html_safe, ordenproduccion_descripcioncorte_path(@ordenproduccion,descripcioncorte), method: :delete, data: { confirm: 'Estas Seguro?' } %></td>  
        <strong><%
        if descripcioncorte.tallaxs== nil then descripcioncorte.tallaxs = 0 end
        if descripcioncorte.tallas== nil then descripcioncorte.tallas = 0 end
        if descripcioncorte.tallam== nil then descripcioncorte.tallam = 0 end
        if descripcioncorte.tallal== nil then descripcioncorte.tallal = 0 end
        if descripcioncorte.tallaxl== nil then descripcioncorte.tallaxl = 0 end
        re = re + sumar(descripcioncorte.tallaxs,descripcioncorte.tallas,descripcioncorte.tallam,descripcioncorte.tallal,descripcioncorte.tallaxl) 
        %>
              </strong>       
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<h1>Total Unidad: <%= re %></h1>

<%= link_to "<i class='fa fa-plus-circle fa-2x'></i>".html_safe, new_ordenproduccion_descripcioncorte_path(@ordenproduccion) %>
        	
<%= link_to "<i class='fa fa-arrow-circle-left fa-2x'></i>".html_safe, ordenproduccion_path(@ordenproduccion) %>
