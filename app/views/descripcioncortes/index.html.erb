<h1 class="center">Descripcion del Corte</h1>
<br><br>
<div class="table-reponsive">
  
<table class="table table-hover">
  <thead>
    <tr class="active">
      <th>Tallacantidad</th>
      <th>Capas</th>
      <th>Color</th>
      <th>Tallaxs</th>
      <th>Tallas</th>
      <th>Tallam</th>
      <th>Tallal</th>
      <th>Tallaxl</th>
      <th>Ordenproduccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% re = 0%>
  <tbody>
    <% @descripcioncortes.each do |descripcioncorte| %>
      <tr>
        <td><%= descripcioncorte.tallacantidad %></td>
        <td><%= descripcioncorte.capas %></td>
        <td><%= descripcioncorte.color.colornombre %></td>
        <td><%= descripcioncorte.tallaxs %></td>
        <td><%= descripcioncorte.tallas %></td>
        <td><%= descripcioncorte.tallam %></td>
        <td><%= descripcioncorte.tallal %></td>
        <td><%= descripcioncorte.tallaxl %></td>
        <td><%= descripcioncorte.ordenproduccion.ordennumero %></td>
        
        <td><%= link_to "<i class='fa fa-pencil fa-2x encima'>".html_safe, edit_ordenproduccion_descripcioncorte_path(@ordenproduccion,descripcioncorte) %></td>
        <td><%= link_to "<i class='fa fa-eraser fa-2x encima'>".html_safe, ordenproduccion_descripcioncorte_path(@ordenproduccion,descripcioncorte), method: :delete, data: { confirm: 'Estas Seguro?' } %></td>  
        <strong><%
        re = re + sumar(descripcioncorte.tallaxs,descripcioncorte.tallas,descripcioncorte.tallam,descripcioncorte.tallal,descripcioncorte.tallaxl) 
        %>
              </strong>       
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<h1>Total Unidad: <%= re %></h1>
<%= link_to "<i class='fa fa-plus-circle fa-2x'></i>".html_safe, new_ordenproduccion_descripcioncorte_path(@ordenproduccion) %>
        	
<%= link_to "<i class='fa fa-arrow-circle-left fa-2x'></i>".html_safe, ordenproduccion_path(@ordenproduccion) %>
