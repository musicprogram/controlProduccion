<body class="homepageesh">



  <br>
  <br><br>


  <div class="container perfil" style="margin-top: 20px; margin-bottom: 20px;">
    <div class="row panel" id="mydiv">
      <div class="col-md-4 bg_blur ">
      </div>
      <div class="col-md-8  col-xs-12">
        <%= image_tag @instructor.nombre.avatar.url(:medium),:class => 'img-thumbnail picture hidden-xs questo' rescue nil %>
        <div class="header">

          <div class="col-md-12">

            <div class="col-md-8">
              <h3 class="izquierda fonts"><strong><%= @instructor.nombre.nombreinstructor rescue nil %></strong></h3>
            </div>
            <div class="col-md-4">
              <h3>

                <% if   %>
                <% @instructor.observacionescalidad.to_i > 90 %>
                <i class="fa fa-smile-o fa-2x option animated wobble"></i>
                <% elsif %>
                <% @instructor.observacionescalidad.to_i >= 70 && @instructor.observacionescalidad.to_i <= 89  %>
                <i class="fa fa-frown-o fa-2x option animated wobble"></i>
                <% elsif %>
                <% @instructor.observacionescalidad.to_i <= 69 %>
                <i class="fa fa-exclamation-triangle fa-2x option animated wobble "></i>

                <% end %>
              </h3>
            </div>
          </div>
            

          <div class="col-md-12">
 
      

            <div class="col-md-6">
              <h4 class="izquierda"> <strong>Talla Unidad: </strong><%= @instructor.talla.nombre rescue nil %>   </h4></div>
              <div class="col-md-6">
                <h4 class="derecha"> <strong>Cantidad: </strong><%= @instructor.cantidad %></h4>
              </div>
            </div>

            <div class="col-md-12">
              <div class="col-md-6">  <h4 class="izquierda"> <strong>Primeras: </strong><%= @instructor.primeras %> </h4>
              </div>
              <div class="col-md-6">  <h4 class="derecha"><strong>Segundas: </strong><%= @instructor.segundas %>
               </h4>
              </div>


            </div>
            
            
            <div class="col-md-12">
              <div class="col-md-6"><h4 class="izquierda "> <strong>Fecha de salida: </strong> <%= @instructor.fechasalidaalmacen %></h4></div>
              <div class="col-md-6"><h4 class="derecha "> <strong>Fecha Recibida: </strong> <%= @instructor.fecharecibo %></h4></div>
              
            </div>

            <div class="col-md-12">
              <div class="col-md-6">  <h4 class="izquierda "> <strong>Total Recibidas: </strong> <%= @instructor.totalrecibidas %></h4>
              </div>
              <div class="col-md-6">    
              
              <% if @instructor.duracion == 1%>
              <h4 class="derecha"> <strong>Tiempo de Entrega: </strong><%= @instructor.duracion %> Dia </h4>
              <% elsif @instructor.duracion > 1%>
              <h4 class="derecha"> <strong>Tiempo de Entrega: </strong><%= @instructor.duracion %> Dias </h4>
              <% end %>
              </div>


            </div>
            <div class="col-md-12">
              <div class="col-md-6">  <h4 class="izquierda "> <strong>Calidad: </strong><%= @instructor.observacionescalidad %> %</h4>
              </div>
              <div class="col-md-6">  <h4 class="derecha "></h4>
              </div>
             


            </div>
             

           


        </div>
      </div>
    </div>   

    <br>

    <div class="row nav">    
      <div class="col-md-4"></div>
      <div class="col-md-12 col-xs-12" style="margin: 0px;padding: 0px;">
        <div class="col-md-6 col-xs-6 well"><%= link_to "<i class='fa fa-pencil fa-4x'></i>".html_safe, edit_cuadroproduccion_instructor_path(@cuadroproduccion,@instructor) %></div>
        <div class="col-md-6 col-xs-6 well"><%= link_to "<i class='fa fa-arrow-circle-left fa-4x'></i>".html_safe, cuadroproduccion_instructores_path %></div>
      </div>
    </div>
  </div>



</body>


