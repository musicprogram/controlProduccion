  <h4 class="derecho"><span class="badge option animated wobble"> <%= @instructores.count %> </span></h4 >
  <br>
 
  
    <h1 class="center1 cubo">INSTRUCTORES</h1>
    <br>

<br>


<div class="table-responsive cubo tbla">
  <table class="table table-condensed table-hover tbla">
  <thead>
    <tr class="active">
      <th><h3><b>NOMBRE</b></h3></th>
      <th></th>
      <th><h3><b>TOTAL</b></h3></th>
      <th><h3><b>CALIDAD</b></h3></th>
      <th><h3><b>TIEMPO DE ENTREGA</b></h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructores.each do |instructor| %>
      <tr>
       
        <td class="minus"><h3><b><%= instructor.nombre.nombreinstructor  rescue nil%></b></h3></td>
        <td class="minus"><%= image_tag instructor.nombre.avatar.url(:thumb), class:'img-circle' rescue nil %></td>
        <td class="minus"><h3><%= instructor.totalrecibidas %></h3></td>
        <td class="minus"><h3><%= instructor.observacionescalidad %> %</h3></td>
        <td class="minus"><h3><%= instructor.duracion %> DÃ­as</h3></td>
        
        
        <td><h4><%= link_to "<i class='fa fa-eye fa-3x encima '></i>".html_safe, cuadroproduccion_instructor_path(@cuadroproduccion, instructor) %></h4></td>
        <td><h4><%= link_to "<i class='fa fa-pencil fa-3x encima'>".html_safe, edit_cuadroproduccion_instructor_path(@cuadroproduccion,instructor) %></h4></td>
        <td><h4><%= link_to "<i class='fa fa-eraser fa-3x encima'>".html_safe, cuadroproduccion_instructor_path(@cuadroproduccion,instructor), method: :delete, data: { confirm: 'Are you sure?' } %></h4></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>



<%= link_to "<i class='fa fa-plus-circle fa-4x'></i>".html_safe, new_cuadroproduccion_instructor_path(@cuadroproduccion) %>
