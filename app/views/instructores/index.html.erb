
    <h1 class="center cubo">INSTRUCTORES</h1>
    <br><h4 class="derecho"><span class="badge option animated wobble"> <%= @instructores.count %> </span></h4 >

<br>
<div class="table-responsive cubo">
  <table class="table table-condensed table-hover">
  <thead>
    <tr class="active">
      <th>Nombre</th>
      <th>Imagen</th>
      <th>Total Recibidas</th>
      <th>Calidad</th>
      <th>Salida del Almacen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructores.each do |instructor| %>
      <tr>
        <td><%= instructor.nombre.nombreinstructor %></td>
        <td><%= image_tag instructor.nombre.avatar.url(:thumb)%></td>
        <td><%= instructor.totalrecibidas %></td>
        <td><%= instructor.observacionescalidad %>%</td>
        <td><%= instructor.fechasalidaalmacen %></td>
        
        
        <td><%= link_to "<i class='fa fa-eye fa-3x encima'></i>".html_safe, cuadroproduccion_instructor_path(@cuadroproduccion, instructor) %></td>
        <td><%= link_to "<i class='fa fa-pencil fa-3x encima'>".html_safe, edit_cuadroproduccion_instructor_path(@cuadroproduccion,instructor) %></td>
        <td><%= link_to "<i class='fa fa-eraser fa-3x encima'>".html_safe, cuadroproduccion_instructor_path(@cuadroproduccion,instructor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>



<%= link_to "<i class='fa fa-plus-circle fa-4x'></i>".html_safe, new_cuadroproduccion_instructor_path(@cuadroproduccion) %>
