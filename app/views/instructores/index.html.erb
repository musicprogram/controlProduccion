<body class="insumo tutovi">
  <br>
  
  <h4 class="derecho"><span class="badge option animated wobble"> <%= @instructores.count %> </span></h4 >
  <br>
 
  
    <h1 class="center cubo">INSTRUCTORES</h1>
    <br>

<br>


<div class="table-responsive cubo tbla">
  <table class="table table-condensed table-hover tbla">
  <thead>
    <tr class="active">
      <th>Nombre</th>
      <th></th>
      <th>Total Recibidas</th>
      <th>Calidad</th>
      <th>Tiempo de entrega</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructores.each do |instructor| %>
      <tr>
       
        <td class="minus"><h3><b><%= instructor.nombre.nombreinstructor %></b></h3></td>
        <td class="minus"><%= image_tag instructor.nombre.avatar.url(:thumb), class:'img-circle'%></td>
        <td class="minus"><h3><%= instructor.totalrecibidas %></h3></td>
        <td class="minus"><h3><%= instructor.observacionescalidad %> %</h3></td>
        <td class="minus"><h3><%= instructor.duracion %> DÃ­as</h3></td>
        
        
        <td><%= link_to "<i class='fa fa-eye fa-3x encima '></i>".html_safe, cuadroproduccion_instructor_path(@cuadroproduccion, instructor) %></td>
        <td><%= link_to "<i class='fa fa-pencil fa-3x encima'>".html_safe, edit_cuadroproduccion_instructor_path(@cuadroproduccion,instructor) %></td>
        <td><%= link_to "<i class='fa fa-eraser fa-3x encima'>".html_safe, cuadroproduccion_instructor_path(@cuadroproduccion,instructor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>



<%= link_to "<i class='fa fa-plus-circle fa-4x'></i>".html_safe, new_cuadroproduccion_instructor_path(@cuadroproduccion) %>
