<% end %>




<script>
    
    function pro(){
        
        var primer = document.getElementById('pri').value;
        var segun = document.getElementById('seg').value;
       
        tota= (parseInt(primer) +parseInt(segun) );
        prome =  (parseInt(primer) * 100);
        prome =  prome/tota;
        
        document.getElementById('total').value = tota;
        document.getElementById('suma').value = prome;
    }
</script>

 