<body class="estadisti estadisticas">


  <h4 class="derecho"><span class="badge option animated wobble"> <%= @instructores.count %> </span></h4 >
  
<div class="genera">
  

    <h2 class="center blanco">PROMEDIO GENERAL DE INSTRUCTORES </h2>
</div>
 <div class="parallax imagen-1">
<br>

    <div class="prome">
      
      <div class="col-md-12">
        
        <div class="col-md-6">
          
<% suma = 0  %>
<% dia = 0%>
<% re = 0%>
<% re2 = 0%>
          <div class="table-responsive1 cubo">
            <table class="table table-condensed ">
              <thead>
               <br>
               <tr class="barra">
                <th class="invisi">Id Instructor</th>
                
                <th><h3><b>Instructor</b></h3></th>
                <th></th>
                <th><h3><b>Calidad</b></h3></th>
              </tr>
            </thead>

            <tbody>
              
             
              <% @instructores.each do |x, y| %>
              
              <tr>
               
                <% nombre = Nombre.find(x) %>
                <td class="invisi"><%= x %></td>
                
                <td><h3><b><%= nombre.nombreinstructor %></b></h3></td>
                <td><%= image_tag nombre.avatar.url(:thumb), class:'img-circle' %></td>
                
                
                 <% if y.to_i > 90 %>
                      <td><h3><%= y.to_i %> % <i class="fa fa-smile-o option animated wobble"></i></h3></td>
                  <% elsif y.to_i >= 70 && y.to_i < 90 %>
                      <td><h3><%= y.to_i %> % <i class="fa fa-frown-o"></i></h3></td>
                  <% elsif y.to_i < 70 %>
                      <td><h3><%= y.to_i %> % <i class="fa fa-exclamation-triangle"></i></h3></td>
                <% end %>
                <% re2 +=1 %>
              <% re = re + calidad( y, re2 ) %>  

              </tr>
              
              <% end %>
              
            </tbody>
          </table>
        </div>

      </div>
      
     
      
      
      
      <div class="col-md-3">
        
        

        <div class="table-responsive1 cubo">
          <table class="table table-condensed">
            <thead>
              <br>
              <tr class="barra">
                <th class="invisi">Id Instructor</th>
                
                
                <th><h3><b>Promedio Entrega</b></h3></th>
              </tr>
            </thead>

            <tbody>
              
             
              <% @instructoresdura.each do |x, y| %>
              
              <tr>
               
                <% nombre = Nombre.find(x) %>
                <td class="invisi"><%= x %></td>
                
                 <% if y.to_i == 1 %>
                  <td><h3><%= y.to_i %> Día</h3></td>
                  <% elsif y.to_i >1 %>
                  <td><h3><%= y.to_i %> Días</h3></td>
                <% end %>
              </tr>
              
              
              <% dia = dia + prom(y, re2) %>
              <% end %>
              
            </tbody>
          </table>
        </div>

      </div>
      
      <div class="col-md-3">
        <div class="table-responsive1 cubo">
          <table class="table table-condensed">
            <thead>
             <br>
             <tr class="barra">
              <th class="invisi">Id Instructor</th>
              
              
              <th><h3><b>Total</b></h3></th>
            </tr>
          </thead>

          <tbody>
            
           
            <% @instructorestotal.each do |x, y| %>
            
            <tr>
             
              <% nombre = Nombre.find(x) %>
              <td class="invisi"><%= x %></td>
              
              
              <td><h3><%= y.to_i %> Entregas</h3> </td>

            </tr>
              <% suma = suma+ sum(y,re2) %>
            <% end %>
            
          </tbody>
        </table>
      </div>
    </div>
  
    
  </div>











</div>
<br>
</div>
