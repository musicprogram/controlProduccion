<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>
   <div class="container formulario" style="margin-top:40px"><br>
    <div class="row">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
           Registro <strong>Control Produccion</strong>
          </div>
          <div class="panel-body">
            <form role="form" action="#" method="POST">
              <fieldset>
                <div class="row">
                  <br>
                  <div class="center-block">
                    
                  <%= image_tag("sena.png",:class => 'option animated wobble')%>
                  </div>
                  <br>
                </div>
                <div class="row">
                  <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="fa fa-user-secret"></i>

                        </span> 
                       <%= f.email_field :email, autofocus: true,class:'form-control' %>
                        
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="fa fa-unlock-alt"></i>

                        </span>
                        <% if @validatable %>
   <% @minimum_password_length %> 
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class:'form-control'  %>
                         
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                         <i class="fa fa-unlock-alt"></i>

                        </span>
                       
    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
                         
                      </div>
              
                    </div>
                    <div class="form-group">
                       <%= f.submit "Registrar",class:'btn btn-default btn-lg btn-block' %>
                    </div>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>

          <% end %>
          <div class="panel-footer ">
            Ingreso de sesion    <%= link_to "Ingresar", new_session_path(resource_name) %><br />
          </div>
                </div>
      </div>
    </div>
</div>

