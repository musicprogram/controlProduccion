<body class="sesion">


  <br></br><br></br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="formulario" style="margin-top:40px">
    <br>
    <div class="row">
      <div class="col-md-12">

        <div class="col-md-3"></div>
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading">
             <h2 class="center">
                Ingreso <strong>Control Produccion</strong>
             </h2>
            </div>
            <div class="panel-body">
              <form role="form" action="#" method="POST">
                <fieldset>
                  <div class="row">
                    <br>
                    <div class="center-block">

                      <%= image_tag("ss.png",:class => 'option animated wobble')%>
                    </div>
                    <br>
                  </div>
                  <div class="row">
                    <div class="col-sm-12 col-md-10  col-md-offset-1">
                      <div class="form-group">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="fa fa-user-secret"></i>

                          </span> 
                          <%= f.email_field :email, autofocus: true, class:'form-control' %>

                        </div>
                      </div>
                      <div class="form-group">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="fa fa-unlock-alt"></i>

                          </span>
                          <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
                        </div>
                        <% if devise_mapping.rememberable? -%>
                        <div class="field">
                          <%= f.check_box :remember_me, class:'form-control' %>

                        </div>
                        <% end -%>
                      </div>
                      <div class="form-group">
                       <%= f.submit "Ingresar",class:'btn btn-succes btn-lg btn-block  tex1' %>
                     </div>
                   </div>
                 </div>

               </fieldset>
             </form>
           </div>

           <% end %>
           <div class="panel-footer2 ">
            <h2 class="center">Crear <%= link_to "<i class='fa fa-user-plus'></i>".html_safe, new_registration_path(resource_name) %><br /></h2>

          </div>
        </div>
      </div>
      <div class="col-md-3"></div>

    </div>
  </div>

</div>


<style>

</style>
</body>