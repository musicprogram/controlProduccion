

<% @cuadroproduccion.instructores.each do |instructor| %>

<div class="col-md-6">
  <h5 class="izquierda hh"> <strong><%= image_tag instructor.nombre.avatar.url(:medium),:class => 'img-circle picture hidden-xs questo som' rescue nil %> </strong></h5>
</div>
<div class="col-md-6">
  <h5 class="derecha hh"> 
    <strong>

      <h3>

        <% if   %>
        <% instructor.observacionescalidad.to_i > 90 %>
        <i class="fa fa-smile-o fa-2x option animated wobble cara3 "></i>
        <% elsif %>
        <% instructor.observacionescalidad.to_i >= 70 && instructor.observacionescalidad.to_i <= 89  %>
        <i class="fa fa-frown-o fa-2x option animated wobble cara2"></i>
        <% elsif %>
        <% instructor.observacionescalidad.to_i <= 69 %>
        <i class="fa fa-exclamation-triangle fa-2x option animated wobble cara1"></i>

        <% end %>
      </h3>


    </strong> 
  </h5>
</div>




<div class="col-md-6">
  <h3 class="izquierda fonts"><strong><%= instructor.nombre.nombreinstructor rescue nil %></strong></h3> 

</div>
<div class="col-md-6">
  <h4 class="derecha fonts"> </h4>
</div>

<div class="col-md-12">
  <div class="col-md-6">
    <h3 class="izquierda fonts"> <strong>Talla Unidad: <%= instructor.talla.nombre rescue nil %> </strong>  </h3>

  </div>
  <div class="col-md-6">
    <h4 class="derecha fonts"> <strong>Cantidad: <%= instructor.cantidad %> </strong></h4>
  </div>
</div>

<div class="col-md-12">
  <div class="col-md-6">  <h4 class="izquierda"> <strong>Primeras: </strong><%= instructor.primeras %> </h4>
  </div>
  <div class="col-md-6">  <h4 class="derecha"><strong>Segundas: </strong><%= instructor.segundas %>
  </h4>
</div>


</div>


<div class="col-md-12">
  <div class="col-md-6"><h4 class="izquierda "> <strong>Salida: </strong> <%= instructor.fechasalidaalmacen %></h4></div>
  <div class="col-md-6"><h4 class="derecha "> <strong>Recibida: </strong> <%= instructor.fecharecibo %></h4></div>

</div>

<div class="col-md-12">
  <div class="col-md-6">  <h4 class="izquierda "> <strong>Total Recibidas: </strong> <%= instructor.totalrecibidas %></h4>
  </div>
  <div class="col-md-6">    

    <% if instructor.duracion == nil %>
    <% instructor.duracion = 0 %>
    <%elsif %>

    <% if instructor.duracion == 1%>
    <h4 class="derecha"> <strong>Tiempo de Entrega: </strong><%= instructor.duracion %> Dia </h4>
    <% elsif instructor.duracion > 1%>
    <h4 class="derecha"> <strong>Tiempo de Entrega: </strong><%= instructor.duracion %> Dias </h4>
    <% end %>
    <% end %>
  </div>


</div>
<div class="col-md-12">
  <div class="col-md-6">  <h4 class="izquierda "> <strong>Calidad: </strong><%= instructor.observacionescalidad %> %</h4>
  </div>
  <div class="col-md-6">  <h4 class="derecha "></h4>

  </div>


  <%= link_to "<i class='fa fa-eraser fa-3x'></i>".html_safe, [instructor.cuadroproduccion, instructor],method: :delete, data: { confirm: 'Are you sure?' } %>
  
  <%end%>
  
</div>







