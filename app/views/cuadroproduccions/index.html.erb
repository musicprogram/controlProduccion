<div class="table-responsive tbla">

  <table class="table table-condensed table-hover tbla">
    <thead>
      <tr class="active tablasom">
        <th><h3><b>Numero Orden</b></h3></th>
        <th><h3><b>Referencia</b></h3></th>
        
        
        <th><h3><b>Tela</b></h3></th>
        
        
        <th><h3><b>Color</b></h3></th>
        
        <th><h3><b>Modulo</b></h3></th>
        
