
<body class="fonpage footer_terce">
  <h1 class="center">ORDENES DE TERCEROS</h1>

<h4 class="derecho"><span class="badge option animated wobble"> <%= @ordenterceros.count %> </span></h4 >

<br><br>
<div class="table-responsive tbla ">
<table class="table table-condensed table-hover tbla">
  <thead>
    <tr class="active tablasom">
      <th>Numero de Orden</th>
      <th>Referencia</th>
      
      <th>Nombre Del Proveedor</th>
     
      <th>Responsable</th>
      <th>Proceso</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ordenterceros.each do |ordentercero| %>
      <tr>
        
        <td>000<%= ordentercero.id %></td>
        <td><%= ordentercero.referencia %></td>
        
        <td><%= ordentercero.nombreproveedor %></td>
        
        <td><%= ordentercero.responsable %></td>
        <td><%= ordentercero.proceso.procesonombre %></td>
        
        <td><%= link_to "<i class='fa fa-eye fa-3x'>".html_safe, ordentercero %></td>
        <td><%= link_to "<i class='fa fa-pencil fa-3x'>".html_safe, edit_ordentercero_path(ordentercero) %></td>
        <td><%= link_to "<i class='fa fa-eraser fa-3x'>".html_safe, ordentercero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to "<i class='fa fa-plus-circle fa-4x'></i>".html_safe, new_ordentercero_path %>

</body>