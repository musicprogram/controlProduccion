<h1 class="center">Orden de terceros</h1>
<div class="table-responsive ">
<table class="table table-condensed tablero">
  <thead>
    <tr>
      <th>Referencia</th>
      <th>Numeroop</th>
      <th>Nombreproveedor</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Fechaingreso</th>
      <th>Fechasalida</th>
      <th>Responsable</th>
      <th>Proceso</th>
      <th>Cantidad</th>
      <th>Pieza</th>
      <th>Color</th>
      <th>Transportador</th>
      <th>Totalunidad</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ordenterceros.each do |ordentercero| %>
      <tr>
        <td><%= ordentercero.referencia %></td>
        <td><%= ordentercero.numeroop %></td>
        <td><%= ordentercero.nombreproveedor %></td>
        <td><%= ordentercero.direccion %></td>
        <td><%= ordentercero.telefono %></td>
        <td><%= ordentercero.email %></td>
        <td><%= ordentercero.fechaingreso %></td>
        <td><%= ordentercero.fechasalida %></td>
        <td><%= ordentercero.responsable %></td>
        <td><%= ordentercero.proceso.procesonombre %></td>
        <td><%= ordentercero.cantidad %></td>
        <td><%= ordentercero.pieza %></td>
        <td><%= ordentercero.color.colornombre %></td>
        <td><%= ordentercero.transportador %></td>
        <td><%= ordentercero.totalunidad %></td>
        <td><%= ordentercero.observacion %></td>
        <td><%= link_to "<i class='fa fa-eye fa-2x'>".html_safe, ordentercero %></td>
        <td><%= link_to "<i class='fa fa-pencil fa-2x'>".html_safe, edit_ordentercero_path(ordentercero) %></td>
        <td><%= link_to "<i class='fa fa-eraser fa-2x'>".html_safe, ordentercero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to "<i class='fa fa-plus-circle fa-4x'></i>".html_safe, new_ordentercero_path %>
