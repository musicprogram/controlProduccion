<h1 class="center">Ordenes de Produccion</h1> <br>
<div class="table-responsive ">
  <div class="tablero1">
<table class="table table-condensed tablero">
  <thead>
    <tr>
      <th>Fechaprogramacion</th>
      <th>Ordennumero</th>
      <th>Cliente</th>
      <th>Descripcion</th>
      <th>Referencia</th>
      <th>Corte</th>
      <th>Ancho</th>
      <th>Tela</th>
      <th>Largotrazo</th>
      <th>Largotendido</th>
      <th>Numeropaquetes</th>
      <th>Cantidad</th>
      <th>Promediounidad</th>
      <th>Totalmetros</th>
      <th>Corte</th>
      <th>Tiqueteada</th>
      <th>Prenda</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ordenproduccions.each do |ordenproduccion| %>
      <tr>
        <td><%= ordenproduccion.fechaprogramacion %></td>
        <td><%= ordenproduccion.ordennumero %></td>
        <td><%= ordenproduccion.cliente.clientenombre %></td>
        <td><%= ordenproduccion.descripcion %></td>
        <td><%= ordenproduccion.referencia %></td>
        <td><%= ordenproduccion.corte %></td>
        <td><%= ordenproduccion.ancho %></td>
        <td><%= ordenproduccion.tela.telanombre %></td>
        <td><%= ordenproduccion.largotrazo %></td>
        <td><%= ordenproduccion.largotendido %></td>
        <td><%= ordenproduccion.numeropaquetes %></td>
        <td><%= ordenproduccion.cantidad %></td>
        <td><%= ordenproduccion.promediounidad %></td>
        <td><%= ordenproduccion.totalmetros %></td>
        <td><%= ordenproduccion.corte %></td>
        <td><%= ordenproduccion.tiqueteada %></td>
        <td><%= ordenproduccion.prenda.prendanombre %></td>
        <td><%= link_to "<i class='fa fa-scissors fa-2x encima'>".html_safe, ordenproduccion_descripcioncortes_path(ordenproduccion) %></td>
        <td><%= link_to "<i class='fa fa-eye fa-2x encima'>".html_safe, ordenproduccion %></td>
        <td><%= link_to "<i class='fa fa-pencil fa-2x encima'>".html_safe, edit_ordenproduccion_path(ordenproduccion) %></td>
        <td><%= link_to "<i class='fa fa-eraser fa-2x encima'>".html_safe, ordenproduccion, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<%= link_to "<i class='fa fa-plus-circle fa-4x'></i>".html_safe, new_ordenproduccion_path %>

