
<body class="fonpage orden_p">
  <h1 class="center"><b>ORDENES DE PRODUCCIÃ“N</b></h1> 
  <br>
<h4 class="derecho"><span class="badge option animated wobble"> <%= @ordenproduccions.count %> </span></h4 >

  <%= form_tag ordenproduccions_path, :method => 'get' do %>
  <% content_tag :label do %>

  <%= text_field_tag :search, params[:search], class:'form-control'  %> <br>
  <%= submit_tag "Buscar Referencia", :referencia => nil, class:'btn btn-succes  tex1'%>
  <% end %>
  <% end %>
 <br>

  <div class="table-responsive ">
    <div class="tbla">
      <table class="table table-condensed table-hover tbla">
        <thead>
          <tr class="active tablasom">
            <th><h3>Orden</h3></th>
            <th><h3>Referencia</h3></th>
            <th><h3>Fecha</h3></th>

            <th><h3>Descripcion</h3></th>

            <th><h3>Cantidad</h3></th>
          

            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @ordenproduccions.each do |ordenproduccion| %>
          <tr>
            <td class="minus"><h3><b><%= ordenproduccion.id %></b></h3></td>
            <td class="minus"><h3><%= ordenproduccion.referencia %></h3></td>
            <td class="minus"><h5><%= ordenproduccion.fechaprogramacion %></h5></td>
            <td class="minus"><h4><%= ordenproduccion.descripcion %></h4></td>


            <td class="minus"><h3><%= ordenproduccion.cantidad rescue nil %></h3></td>
         

            <td><%= link_to "<i class='fa fa-eye fa-4x encima'>".html_safe, ordenproduccion %></td>
            <td><%= link_to "<i class='fa fa-pencil fa-4x encima'>".html_safe, edit_ordenproduccion_path(ordenproduccion) %></td>
            <td><%= link_to "<i class='fa fa-eraser fa-4x encima'>".html_safe, ordenproduccion, method: :delete, data: { confirm: 'Estas seguro?' } %></td>



          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to "<i class='fa fa-plus-circle fa-4x'></i>".html_safe, new_ordenproduccion_path %>

  <%= will_paginate @ordenproduccions, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
  <br>

</body>


